#include <stdio.h>

int main()
{
    int x=0,c=0,y=0;
    scanf("%d",&x);
    for(int i=0;i<=x;i++)
    {
    	if(y==x)
        break;

        if(y+5<=x)
        {
        	y+=5;
            c++;
            continue;
        }
        if(y+4<=x)
        {
        	y+=4;
            c++;
            continue;
        }
        if(y+3<=x)
        {
        	y+=3;
            c++;
            continue;
        }
        if(y+2<=x)
        {
        	y+=2;
            c++;
            continue;
        }
        if(y+1<=x)
        {
        	y+=1;
            c++;
            continue;
        }

    }
    printf("%d",c);
}
